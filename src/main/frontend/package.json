{
  "name": "redway-route-planner",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "install": "rimraf dist && npm run test && npm run build",
    "build": "npm run static",
    "build-dev": "npm run build && npm run copy-to-target",
    "copy-to-target": "cpx '../resources/static/**/*' ../../../target/classes/static",
    "test": "npm run lint",
    "lint": "eslint src/**/*.js",
    "static": "cpx 'src/**/*' ../resources/static",
    "watch": "npm-watch"
  },
  "watch": {
    "build-dev": {
      "patterns": [
        "src"
      ],
      "extensions": "js,html, css",
      "quiet": true
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "cpx": "1.5.0",
    "eslint": "3.14.1",
    "npm-watch": "0.1.7",
    "rimraf": "2.5.4"
  }
}
